#!/bin/bash
# Definir colores y efectos
verde="\e[1;32m"  # verde bold
v="\e[0;32m"  # verde normal
azul="\e[1;34m"  # azul bold
az="\e[0;34m"  # azul bold
cyan="\e[1;36m"  # cyan bold
rojo="\e[1;31m"  # Rojo bold
r="\e[0;31m"  # Rojo normal
blanco="\e[1;37m"  # Blanco bold
b="\e[0;37m"  # Blanco normal
amarillo="\e[1;33m"  # Amarillo bold
a="\e[0;33m"  # Amarillo nornal
fin="\e[0m"   # fin del color
fun_bar () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
[[ ! -e /usr/lib/sshplus ]] && rm -rf /bin/menu > /dev/null 2>&1
${comando[0]} -y > /dev/null 2>&1
${comando[1]} -y > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "${amarillo}["
while true; do
   for((i=0; i<18; i++)); do
   echo -ne "${rojo}#"
   sleep 0.1s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "${amarillo}]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "${amarillo}["
done
echo -e "${amarillo}]\e[1;37m -${verde} OK !\e[1;37m"
tput cnorm
}
IP=$(cat /etc/IP)
x="ok"
menu ()
{
velocity () {
aguarde () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
[[ ! -d /etc/SSHPlus ]] && rm -rf /bin/menu
${comando[0]} > /dev/null 2>&1
${comando[1]} > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "  ${amarillo}AGUARDE \e[1;37m- ${amarillo}["
while true; do
   for((i=0; i<18; i++)); do
   echo -ne "${rojo}#"
   sleep 0.1s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "${amarillo}]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "  ${amarillo}AGUARDE \e[1;37m- ${amarillo}["
done
echo -e "${amarillo}]\e[1;37m -${verde} OK !\e[1;37m"
tput cnorm
}
fun_tst () {
speedtest --share > speed
}
echo ""
echo -e "   ${verde}TESTANDO LA VELOCIDAD Del VPS !\e[0m"
echo ""
aguarde 'fun_tst'
echo ""
png=$(cat speed | sed -n '7 p' |awk -F : {'print $NF'})
down=$(cat speed | sed -n '8 p' |awk -F :  {'print $NF'})
upl=$(cat speed | sed -n '9 p' |awk -F :  {'print $NF'})
lnk=$(cat speed | sed -n '10 p' |awk {'print $NF'})
echo -e "\e[0;34mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\e[0m"
echo -e "${verde}PING (LATENCIA):\e[1;37m$png"
echo -e "${verde}DOWNLOAD:\e[1;37m$down"
echo -e "${verde}UPLOAD:\e[1;37m$upl"
echo -e "${verde}LINK: ${cyan}$lnk\e[0m"
echo -e "\e[0;34mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\e[0m"
rm -rf $HOME/speed
}
#limiter
function limit1 () {
   clear
   echo -e "\n${verde}INICIANDO el LIMITER... \e[0m"
   echo ""
   fun_bar 'screen -dmS limiter limiter' 'sleep 3'
   [[ $(grep -wc "limiter" /etc/autostart) = '0' ]] && {
       echo -e "ps x | grep 'limiter' | grep -v 'grep' && echo 'ON' || screen -dmS limiter limiter" >> /etc/autostart
   } || {
       sed -i '/limiter/d' /etc/autostart
	   echo -e "ps x | grep 'limiter' | grep -v 'grep' && echo 'ON' || screen -dmS limiter limiter" >> /etc/autostart
   }
   echo -e "\n${verde}  LIMITER ACTIVO !\e[0m"
   sleep 3
   menu
}
function limit2 () {
   clear
   echo -e "${verde}PARANDO el LIMITER... \e[0m"
   echo ""
   fun_stplimiter () {
      sleep 1
      screen -r -S "limiter" -X quit
      screen -wipe 1>/dev/null 2>/dev/null
      [[ $(grep -wc "limiter" /etc/autostart) != '0' ]] && {
          sed -i '/limiter/d' /etc/autostart
      }
      sleep 1
   }
   fun_bar 'fun_stplimiter' 'sleep 3'
   echo -e "\n${rojo} LIMITER PARADO !\e[0m"
   sleep 3
   menu
}
function limit_ssh () {
[[ $(ps x | grep "limiter"|grep -v grep |wc -l) = '0' ]] && limit1 || limit2
}
#onlineapp
function onapp1 () {
   clear
   echo -e "\n${verde}INICIANDO  ONLINE APP... \e[0m"
   echo ""
   apt install apache2 -y > /dev/null 2>&1
   sed -i "s/Listen 80/Listen 8888/g" /etc/apache2/ports.conf >/dev/null 2>&1
   service apache2 restart
   rm -rf /var/www/html/server >/dev/null 2>&1
   mkdir /var/www/html/server >/dev/null 2>&1
   fun_bar 'screen -dmS onlineapp onlineapp' 'sleep 3'
   [[ $(grep -wc "onlineapp" /etc/autostart) = '0' ]] && {
       echo -e "ps x | grep 'onlineapp' | grep -v 'grep' && echo 'ON' || screen -dmS onlineapp onlineapp" >> /etc/autostart
   } || {
       sed -i '/onlineapp/d' /etc/autostart
	   echo -e "ps x | grep 'onlineapp' | grep -v 'grep' && echo 'ON' || screen -dmS onlineapp onlineapp" >> /etc/autostart
   }
   IP=$(wget -qO- ipv4.icanhazip.com) >/dev/null 2>&1
   echo -e "\n${verde}  ONLINE APP ATIVO !\e[0m"
   echo -e "${rojo} ${amarillo}URL de UsuÃ¡rios Online para usar no App\e[0m"
   echo -e " http://$IP:8888/server/online"
   sleep 10
   menu
}
function onapp2 () {
   clear
   echo -e "${verde}PARANDO  ONLINE APP... \e[0m"
   echo ""
   fun_stponlineapp () {
      sleep 1
      screen -r -S "onlineapp" -X quit
      screen -wipe 1>/dev/null 2>/dev/null
      [[ $(grep -wc "onlineapp" /etc/autostart) != '0' ]] && {
          sed -i '/onlineapp/d' /etc/autostart
      }
      sleep 1
   }
   fun_bar 'fun_stponlineapp' 'sleep 3'
   rm -rf /var/www/html/server >/dev/null 2>&1
   echo -e "\n${rojo} ONLINE APP PARADO !\e[0m"
   sleep 3
   menu
}
function onapp_ssh () {
[[ $(ps x | grep "onlineapp"|grep -v grep |wc -l) = '0' ]] && onapp1 || onapp2
}
##
function autoexec () {
   if grep "menu;" /etc/profile > /dev/null; then
      clear
      echo -e "${verde}DESACTIVANDO AUTO EJECUCION\e[0m"
      offautmenu () {
         sed -i '/menu;/d' /etc/profile
      }
      echo ""
      fun_bar 'offautmenu'
      echo ""
      echo -e "${rojo}AUTO EJECUCION DESACTIVADO!\e[0m"
      sleep 1.5s
      menu2
   else
      clear
      echo -e "${verde}ACTIVANDO AUTO EJECUCION\e[0m"
      autmenu () {
         grep -v "^menu;" /etc/profile > /tmp/tmpass && mv /tmp/tmpass /etc/profile
         echo "menu;" >> /etc/profile
      }
      echo ""
      fun_bar 'autmenu'
      echo ""
      echo -e "${verde}AUTO EXECUCION ACTIVADO!\e[0m"
      sleep 1.5s
      menu2
   fi

}
